<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coisini.curtain.mapper.SpuDetailImgMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.coisini.curtain.model.SpuDetailImgDO">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="delete_time" property="deleteTime" />
        <result column="img" property="img" />
        <result column="spu_id" property="spuId" />
        <result column="index" property="index" />
    </resultMap>

    <delete id="hardDeleteImgsBySpuId">
        delete from spu_detail_img where spu_detail_img.`spu_id` = #{spuId}
    </delete>

</mapper>
