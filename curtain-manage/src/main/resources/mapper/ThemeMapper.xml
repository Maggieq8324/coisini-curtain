<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coisini.curtain.mapper.ThemeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.coisini.curtain.model.Theme">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="delete_time" property="deleteTime" />
        <result column="title" property="title" />
        <result column="description" property="description" />
        <result column="name" property="name" />
        <result column="tpl_name" property="tplName" />
        <result column="entrance_img" property="entranceImg" />
        <result column="extend" property="extend" />
        <result column="internal_top_img" property="internalTopImg" />
        <result column="title_img" property="titleImg" />
        <result column="online" property="online" />
    </resultMap>

    <select id="getSpus" resultType="com.coisini.curtain.model.SimplifySpu">
        select s.id, s.title, s.subtitle, s.img, ts.id tid
        from spu s
        right join theme_spu ts
        on s.id = ts.spu_id
        where s.delete_time is null
        and ts.theme_id = #{id}
    </select>

</mapper>
