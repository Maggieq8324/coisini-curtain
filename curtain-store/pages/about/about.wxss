page{
    box-sizing: border-box;
    padding: 30rpx;
}
.container{
    display:flex;
    flex-direction:column;
    align-items: center;
    width: 690rpx;
}

.top{
    height:200rpx;
    width:690rpx;
}

.next2{
    display:flex;
    flex-direction:column;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    padding:40rpx 0 0 0;
    background-color: #ffffff;
    box-shadow:0px 4px 10px 0px rgba(9,36,66,0.04);
}

.sub-container{
    display:flex;
    flex-direction:column;
    align-items: flex-start;
}

.next-inner{
    display:flex;
    flex-direction:row;
    align-items: center;
    position: relative;
    margin-bottom: 46rpx;
}

.next-inner text{
    font-size:32rpx;
    z-index: 99;
}

.next-inner text:first-child{
    font-weight: 500;
}

.next-inner text:last-child{
    color:#157658;
    margin-left: 40rpx;
    font-size:28rpx;
}

.block{
    width:64rpx;
    height:20rpx;
    background-color: #DCEBE6;
    position: absolute;
    /*left:-60rpx;*/
    top:25rpx;
    /*opacity: 0.8;*/
}

.next3{
    width: 100%;
    margin-top:20rpx;
    background-color: #ffffff;
    display:flex;
    flex-direction:column;
    padding:40rpx;
    box-sizing: border-box;
}

.next3 .one-row:first-child{
    margin-bottom: 32rpx;
    border-bottom: 3rpx solid #f3f3f3 ;
    padding-bottom: 32rpx;
}

.one-row{
    display:flex;
    flex-direction:row;
    justify-content: space-between;
}

.right-side{
    padding-left:14rpx;
    border-left: 3rpx dashed #157658;
}
.left-side{
    display:flex;
    flex-direction:column;
}
.left-side text:first-child{
    color:#999999;
    font-size:20rpx;
    margin-bottom: 10rpx;
}

.left-side text:last-child{
    color: #157658;
    font-size:28rpx;
}

.btn{
    background-color: #DCEBE6;
    color: #157658;
    width:50rpx;
    height: 80rpx;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:center;
    font-size:20rpx;
}

.next4{
    width: 100%;
    display:flex;
    flex-direction:column;
    align-items: center;
    margin-top: 42rpx;
}

.wx{
    width:240rpx;
    height:240rpx;
}

.next4 text:nth-child(2){
    margin-top: 34rpx;
    font-size:28rpx;
    margin-bottom: 8rpx;
}

.next4 text:last-child{
    font-size: 24rpx;
    color: #999999;
}
