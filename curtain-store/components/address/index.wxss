/* components/address/index.wxss */

.container{
    box-sizing: border-box;
    width: 750rpx;
    min-height: 176rpx;
    padding-top:40rpx;
    background-color: #F6FBF9;
    display:flex;
    flex-direction:column;
    align-items: center;
    justify-content: space-between;
}

.address-container{
    box-sizing: border-box;
    width: 100%;
    display:flex;
    flex-direction:row;
    align-items: center;
    padding-left:30rpx;
    padding-right:20rpx;
    justify-content: space-between;
}

.address-inner{
    display: flex;
    flex-direction: column;
    width: 620rpx;
}

.base-info{
    font-size:28rpx;
    color: #333333;
    display:flex;
    flex-direction:row;
    align-items: center;
}

.base-info l-icon{
    margin-right: 30rpx;
}

