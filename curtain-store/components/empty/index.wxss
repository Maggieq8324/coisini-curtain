/* components/empty/index.wxss */
/*#157658*/

.container{
    width:600rpx;
    display:flex;
    flex-direction: column;
    align-items:center;
    justify-content:center;
    color:#333333;
}
.img{
    margin-bottom:40rpx;
    width:120rpx;
    height:120rpx;
}

.text{
    margin-bottom: 50rpx;
}

.btn{
    background-color: #157658 !important;
    border-radius: 2rpx !important;
    margin-top: 50rpx;
}

.empty-cart{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.empty-cart .cart-icon{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 190rpx;
    height: 190rpx;
    margin-top: 100rpx;
    border-radius: 50%;
    background: #d6d6d6;
}

.cart-icon image{
    width: 80rpx;
    height: 80rpx;
}

.prompt{
    margin-top: 50rpx;
}

