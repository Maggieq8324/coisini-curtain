.container{
    background-color: #DCEBE6;
    height: 360rpx;
    width: 100%;
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
}
.inner-container{
    position: relative;
    box-sizing: border-box;
    width: 690rpx;
    height: 260rpx;
    background-color: #ffffff;
    padding-left:38rpx;
    padding-right:38rpx;
    box-shadow:0px 0px 8px 0px rgba(119,163,149,0.2);
    border-radius: 4rpx;
}

.curtain {
    font-family: curtain !important;
    font-size: 24rpx;
    font-style: normal;
    color: #157658 !important;
}

.row-top{
}

.avatar-container{
    position: relative;
    top:-18rpx;
}

.avatar{
    border-radius: 4rpx;
}

.auth-btn{
    position: absolute;
    top:28rpx;
    /*top: -50rpx;*/
    right: 0;
    border-top-left-radius: 60rpx;
    border-bottom-left-radius: 60rpx;
    font-size:24rpx;
    color: #157658;
}

.row-bottom{
    display:flex;
    flex-direction:row;
    justify-content: center;
}

.bottom-container{
    display:flex;
    flex-direction:row;
    align-items: center;
    height:80rpx;
    font-size:24rpx;
    color:#999999;
    width:580rpx;
    justify-content: space-around;
}

.left{
    height: 100%;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content: space-between;
}

.left text:first-child{
    font-size:36rpx;
    line-height: 36rpx;
    color: #157658;
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
}

.v-line{
    width:3rpx;
    height: 50rpx;
    background-color: #dddddd;
}

.right{
    height: 100%;
    flex-direction:column;
    display:flex;
    align-items:center;
    justify-content: space-between;
}

